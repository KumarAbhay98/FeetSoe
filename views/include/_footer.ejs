<script>
    // jquery
    $(document).ready(function () {
        $(window).scroll(function () {
            // Check if we've scrolled past a certain point
            if ($(this).scrollTop() > 10) {
                // Apply the scrolled styles
                $('.navbar').addClass('navbar-scrolled');
            } else {
                // Remove the scrolled styles
                $('.navbar').removeClass('navbar-scrolled');
            }
        });
    });

    // JavaScript to hide the loader when the page is fully loaded
    window.addEventListener('load', () => {
        const loader = document.querySelector('.loader'); // Use the correct selector
        loader.style.display = 'none';
    });
    // <!-- fashion shoe -->
    // JavaScript function to filter shoes by category
    function filterCategory(category) {
        // Redirect to the appropriate category URL
        window.location.href = `/fashion/${encodeURIComponent(category)}`;
    }
    // <!-- cart logic -->
    function addToCart(productId) {
        // Send an AJAX request to add the product to the cart
        fetch(`/addToCart/${productId}`, {
            method: 'POST',
        })
            .then(response => {
                if (response.ok) {
                    // Handle success (e.g., update the cart icon or message)
                    console.log('Product added to cart successfully');
                } else {
                    // Handle error
                    console.error('Failed to add product to cart');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
    }

    // Function to show/hide the "Go Up" button based on scroll position
    function toggleGoUpButton() {
        const goUpButton = document.getElementById('go-up-button');
        if (window.scrollY > window.innerHeight) {
            goUpButton.style.display = 'block';
        } else {
            goUpButton.style.display = 'none';
        }
    }

    // Function to scroll to the top of the page when the button is clicked
    function scrollToTop() {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    }

    // Attach event listeners
    window.addEventListener('scroll', toggleGoUpButton);
    document.getElementById('go-up-button').addEventListener('click', scrollToTop);

    // aos
    AOS.init({
        // Global settings:
        disable: false,
        startEvent: 'DOMContentLoaded', // name of the event dispatched on the document, that AOS 
