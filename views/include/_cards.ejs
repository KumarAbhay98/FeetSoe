<!-- cards.ejs -->
<div class="album py-5" style="background:#ded8d3">
    <div data-aos="fade-up"
    data-aos-anchor-placement="center-center" class="container mb-5"
        style="color:black;text-transform: uppercase;font-size: 2rem;text-align: center;">Featured
        Products</div>
    <div class="container">

        <div class="row">
            <% for (let i = 0; i < shoes.length-30; i++) { %>
            <div class="col-md-4 mb-4">
                <div class="card fashion-card">
                    <img src="<%= shoes[i].image %>"
                        alt="<%= shoes[i].name %>"
                        class="card-img-top card-img-custom">
                    <div class="card-body">
                        <h5 class="card-title"><%= shoes[i].name %></h5>
                        <p class="card-text"
                            style="max-height: 60px; overflow: hidden;"><%=
                            shoes[i].excerpt %></p>
                        <p class="card-text"><strong>Price:</strong> <%=
                            shoes[i].price %></p>
                        <div
                            class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/viewProduct/<%= shoes[i].slug %>">
                                    <button type="button" class="btn card-btn">View</button>
                                </a>
                                <button type="button" class="btn card-btn" onclick="addToCart()">Add to Cart</button>

                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>

            <% } %>
        </div>
    </div>
</div>
<script>
    function addToCart(){
        window.location.href="/cart"
    }
</script>